<div class="main-content">
    <header>
        <h2>
            <label for=""> <span class="fas fa-bars"></span></label>
            Loan Id: {{loanRequest.loan_id}}
        </h2>
        <div class="user-wrapper">
            <img src="images/human.png" width="40px" height="40px" alt="">
            <div>
                {{user.name}}
            </div>
        </div>
    </header>
    <main>
         <div class="loan-container">
                  {{#if loanRequest}}
                       
                         <div class="card" style="margin-top: 2em; margin-bottom: 4em;">
                            <div class="card-header">
                                 <table>
                                    <tr>
                                        <td>
                                            <span class="special-txt">Loan Id </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.loan_id}}</p>  

                                        </td>
                                    </tr>
                                    </table>
                             </div>
                            <div class="card-body">
                                <table>
                                    
                                    <tr>
                                        <td>
                                            <span class="special-txt">Issued On</span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.issued_date}}</p>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="special-txt">Requested Loan Amount </span>
                                        </td>
                                        <td>
                                            <p class="card-text"> : <i class="fa fa-rupee"></i>{{loanRequest.amount}}</p>

                                        </td>
                                    </tr>
                                   
                                      <tr>
                                        <td>
                                            <span class="special-txt">Issuer </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.issuer}}</p>

                                        </td>
                                    </tr>
                                     <tr>
                                        <td>
                                            <span class="special-txt">Lender </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.lender}}</p>

                                        </td>
                                    </tr>
                                     <tr>
                                        <td>
                                            <span class="special-txt">Status </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.status}}</p>

                                        </td>
                                    </tr>
                                     <tr>
                                        <td>
                                            <span class="special-txt">Loan Tenure </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.tenure}} months</p>

                                        </td>
                                    </tr>
                                     <tr>
                                        <td>
                                            <span class="special-txt">Interest </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.interest}}%</p>

                                        </td>
                                    </tr>
                                     <tr>
                                        <td>
                                            <span class="special-txt">Approved On </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{loanRequest.approved_date}}</p>

                                        </td>
                                    </tr>
                                    
                                </table>

                               
                            </div>
                          
                        </div>
                  {{else}}
                    <p>No loan</p>
                  {{/if}}
         
                <div class="row">
                   {{#if Issuer}}
                        
                                <div class="col-md-6">
                                    <h2>Issuer Details</h2>
                                <div class="card">
                                    <div class="card-header">
                                 <table>
                                    <tr>
                                        <td>
                                            <span class="special-txt">Issuer </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{Issuer.name}}</p>  

                                        </td>
                                    </tr>
                                    </table>
                                 </div>
                                    <div class="card-body">
                                        <table>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">Adhar Id</span>
                                                </td>
                                                <td>
                                                    <p class="card-text">: {{Issuer.adhar_id}}</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                        <span class="special-txt">Address </span> 
                                                </td>
                                                <td>
                                                        <p class="card-text">: {{Issuer.address}}</p>

                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">Phone </span>
                                                </td>
                                                <td>
                                                     <p class="card-text">: {{Issuer.phone}}</p>

                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">State </span>
                                                </td>
                                                <td>
                                                     <p class="card-text">: {{Issuer.state}}</p>
                                                </td>
                                
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">City </span>
                                                </td>
                                                <td>
                                                    <p class="card-text">: {{Issuer.city}}</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">Pincode </span>
                                                </td>
                                                <td>
                                                    <p class="card-text">: {{Issuer.pincode}}</p>
                                                </td>
                                            </tr>
                                        </table>                                        
                                    </div>
                                </div>
                                </div>
                            
                           
                  {{else}}
                    <p>No Issuer</p>
                  {{/if}}

                {{#if Lender}}
                            <div class="col-md-6">
                                <h2>Lender Details</h2>
                                <div class="card">
                                    <div class="card-header">
                                 <table>
                                    <tr>
                                        <td>
                                            <span class="special-txt">Lender </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{Lender.name}}</p>  

                                        </td>
                                    </tr>
                                    </table>
                                 </div>
                                    <div class="card-body">
                                        <table>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">Adhar Id</span>
                                                </td>
                                                <td>
                                                    <p class="card-text">: {{Lender.adhar_id}}</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                        <span class="special-txt">Address </span> 
                                                </td>
                                                <td>
                                                        <p class="card-text">: {{Lender.address}}</p>

                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">Phone</span>
                                                </td>
                                                <td>
                                                     <p class="card-text">: {{Lender.phone}}</p>

                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">State </span>
                                                </td>
                                                <td>
                                                     <p class="card-text">: {{Lender.state}}</p>
                                                </td>
                                
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">City</span>
                                                </td>
                                                <td>
                                                    <p class="card-text">: {{Lender.city}}</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="special-txt">Pincode </span>
                                                </td>
                                                <td>
                                                    <p class="card-text">: {{Lender.pincode}}</p>
                                                </td>
                                            </tr>
                                        </table>                                        
                                    </div>
                                </div>
                            </div>

                  {{else}}
                    <p>No Issuer</p>
                  {{/if}}
               </div>

             {{#if loanRequest}}
             <div class="row">
                        
                                <div class="col-md-6">
                                <div class="card" style="margin-top: 2em; margin-bottom: 4em;">
                                     <div class="card-header">
                                              <h2 style="color: rgb(255, 255, 255);">EMI Schedule</h2>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                       <table width="100%">
                                           <thead>
                                                 <tr>
                                                     <td>
                                                         No
                                                     </td>
                                                <td>
                                                    Due Date
                                                </td>
                                                <td>
                                                    Amount
                                                </td>
                                                <td>
                                                    Status
                                                </td>
                                            </tr>
                                           </thead>
                                           

                                            {{#each loanRequest.emi}}
                                                <tr>
                                                    <td>
                                                        {{@index}}
                                                    </td>
                                                    
                                                    <td>
                                                        {{this.date}}
                                                    </td>
                                                    <td>
                                                       <i class="fa fa-rupee"></i> {{this.amount}}
                                                    </td>
                                                    <td>
                                                        {{#if this.payment}}
                                                            Payed
                                                      
                                                        {{else}}
                                                            Not Payed
                                                    
                                                         {{/if}}
                                                    </td>
                                                </tr>
                                            {{/each}}
                                        </table>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            
                            <div class="col-md-6">
                                <div class="card" style="margin-top: 2em; margin-bottom: 4em;">
                                     <div class="card-header">
                                             <h2 style="color: rgb(255, 255, 255);">Tax Schedule</h2>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                         <table width="100%">
                                             <thead>
                                                 <tr>
                                                     <td>
                                                         No
                                                     </td>
                                                <td>
                                                    Due Date
                                                </td>
                                                <td>
                                                    Amount
                                                </td>
                                                <td>
                                                    Status
                                                </td>
                                            </tr>
                                           </thead>

                                            {{#each loanRequest.tax}}
                                                <tr>
                                                     <td>
                                                        {{@index}}
                                                    </td>
                                                    
                                                    <td>
                                                        {{this.date}}
                                                    </td>
                                                    <td>
                                                       <i class="fa fa-rupee"></i> {{this.amount}}
                                                    </td>
                                                    <td>
                                                        {{#if this.payment}}
                                                            Payed
                                                      
                                                        {{else}}
                                                            Not Payed
                                                    
                                                         {{/if}}
                                                    </td>
                                                </tr>
                                            {{/each}}
                                        </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                       
                          <hr>

                 </div>
                  {{else}}
                    <p>No Loan</p>
                  {{/if}}
              




            </div>

    </main>
</div>





