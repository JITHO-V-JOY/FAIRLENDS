<div class="sidebar">
           <div class="sidebar-brand">
               <h1>
                    <span class="fas fa-hands-helping"></span>
                    Fairlends
               </h1>
           </div>
           <div class="sidebar-menu">
               <ul>
                   <li>
                       <a href="/">
                            <span class="fas fa-tachometer-alt"></span>
                            <span>Dashboard</span>
                       </a>
                   </li>
                   <li>
                       <a href="/users/lender/loans">
                            <span class="fas fa-clipboard-list"></span>
                            <span>Loan Requests</span>
                       </a>
                   </li>
                   <li>
                       <a href="/users/lender/acceptedLoans" >
                            <span class="fas fa-clipboard"></span>
                            <span>My Lends</span>
                       </a>
                   </li>
                    <li>
                       <a href="/users/lender/activeLoans" >
                            <span class="fas fa-clipboard"></span>
                            <span>Active Lends</span>
                       </a>
                   </li>
                   <li>
                       <a href="/users/complaints" class="active">
                            <span class="fas fa-tachometer-alt"></span>
                            <span>My Complaints</span>
                       </a>
                   </li>
                   <li>
                       <a href="/" >
                            <span class="fas fa-user-circle"></span>
                            <span>Profile</span>
                       </a>
                   </li>
                   <li>
                       <a href="/auth/signout">
                            <span class="fas fa-sign-out-alt"></span>
                            <span>Logout</span>
                       </a>
                   </li>
               </ul>
           </div>
</div>

<div class="main-content">
    <header>
        <h2>
            <label for=""> <span class="fas fa-bars"></span></label>
            My Complaints
        </h2>
        <div class="user-wrapper">
            <img src="images/human.png" width="40px" height="40px" alt="">
            <div>
                {{user.name}}
            </div>
        </div>
    </header>

    <main>  
       {{#if complaints}}
            {{#each complaints}}
                        <div class="card">
                            <div class="card-header">
                                 <table>
                                    <tr>
                                        <td>
                                            <span class="special-txt">Complaint Id </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{this._id}}</p>  

                                        </td>
                                    </tr>
                                    </table>
                             </div>
                            <div class="card-body">
                                <table>

                                      <tr>
                                        <td>
                                            <span class="special-txt">Loan Id</span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{this.loan_id}}</p>

                                        </td>
                                    </tr>
                                    
                                    <tr>
                                        <td>
                                            <span class="special-txt">Overdue Date</span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{this.issue_date}}</p>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="special-txt">Status </span>
                                        </td>
                                        <td>
                                             <p class="card-text">: {{this.status}}</p>

                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                    {{/each}}
                    {{else}}
                        <p>No Complaints</p>
       {{/if}}
    </main>
</div>

