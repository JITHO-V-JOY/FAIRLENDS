<div class="navs">
           <div class="head">
               <a class="logo" href="#">FAIRLENDS</a>
               <nav>
                   <ul class="primary-nav">
                        <li class="reg-btn"><a href="/auth/signout">Logout</a></li>
                   </ul>
               </nav>
           </div>
</div>

<section class="user-section">
        <h2>Loan Requests</h2>
           <div class="loan-container">
                  {{#if myLoan}}
                    {{#each myLoan}}
                     <a href="/users/view/loan_request/{{this.loan_id}}" style="text-decoration: none;">
                         <div class="media loan" style="margin-top: 2em; margin-bottom: 4em; max-width: 100%;">
                              <div class="align-self-start mr-3">
                                <img src="http://localhost:3000/images/human.png"  width="200px" height="120px" alt="Generic placeholder image">
                                <p class="card-text"><span class="special-txt">issuer : </span> {{this.issuer}}</p>
                             </div>
                           <div class="media-body" >
                                <h5 class="mt-0"><span class="special-txt">Loan ID  </span><p>{{this.loan_id}}</p></h5>
                                <p class="card-text"><span class="special-txt">Requested Loan Amount : </span>  <i class="fa fa-rupee"></i>{{this.amount}}</p>
                                <p class="card-text"><span class="special-txt">Loan Tenure : </span> {{this.tenure}} months</p>
                                <p class="card-text"><span class="special-txt">Affordable Interest : </span>{{this.interest}}%</p>
                                <p class="card-text"><span class="special-txt">Issued date : </span>{{this.issued_date}}</p>
                                
                                <a href="/users/lender/loans/{{this.loan_id}}" class="btn btn-primary">Accept</a>
                                <a href="#" class="btn btn-success">View Recipient</a>


                            </div>
                        </div>
                        </a>
                    {{/each}}
                  {{else}}
                    <p>No loans yet!</p>
                  {{/if}}
               </div>
</section>
